<div class="container max-w-md m-auto px-8 py-4 flex justify-center h-screen">
  <div>
  <nav class="pb-2">
    <span class="link"><%= link "Home", to: Routes.home_path(@conn, :show) %></span>
    <span class="text"> Â» </span>
    <span class="link"><%= link "Creative Writing", to: Routes.writing_path(@conn, :index) %></span>
  </nav>
  <article>
    <h1 class="markdown-h1"><%= @writing.title %></h1>
    <!-- evaluate EEx tags in content and then render the content -->
    <%= raw(EEx.eval_string(@writing.content)) %>
